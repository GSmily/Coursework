/hypotrochoid
{
	% x(t) = ((a-b)*cos(t)) + (d*cos(((a-b)*t)/b))
	% y(t) = ((a-b)*sin(t)) - (d*sin(((a-b)*t)/b))

	1 dict begin

	/r exch def % number of rotations
	/d exch def % distance from the center of the small circle
	/b exch def % small circle radius
	/a exch def % big circle radius

	/t 0 def % counter
	360 r mul {

		% x(t)
		a b sub t cos mul % ((a-b)*cos(t))
		a b sub t mul b div cos d mul % (d*cos(((a-b)*t)/b))
		add
		/x exch def % x(t)

		% y(t)
		a b sub t sin mul % ((a-b)*sin(t))
		a b sub t mul b div sin d mul % (d*sin(((a-b)*t)/b))
		sub
		/y exch def % y(t)

		0 t eq
			{ x y moveto }
			{ x y lineto }
		ifelse

		/t t 1 add def
	} repeat
	end
} def

